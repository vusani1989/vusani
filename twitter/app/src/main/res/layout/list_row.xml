<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9F9"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageItems"
        android:src="@drawable/dryer"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="15dp"

       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21h"
        android:id="@+id/time"
        android:layout_alignParentTop="true"

        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="320dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alli Dryer"

        android:id="@+id/Name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/imageItems"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginBottom="2dp"
        android:textSize="18dp"
        android:textColor="#1a1a1a" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" @allidry"
        android:id="@+id/ListIteemsNoteTitle"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/Name"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginBottom="2dp"
        android:paddingTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/ListIteemsNoteBody"
        android:layout_below="@+id/ListIteemsNoteTitle"
        android:layout_toEndOf="@id/imageItems"
        android:ellipsize="end"
        android:singleLine="true"

        />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:id="@+id/imageButton5"
        android:background="@drawable/reply"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp" />
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:id="@+id/imageButton6"
        android:background="@drawable/retwet"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="50dp" />
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:id="@+id/imageButton7"
        android:background="@drawable/like"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="50dp" />

</RelativeLayout>
